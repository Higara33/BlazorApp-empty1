@inject IStringLocalizer<Shared.TestimonialsSection> L

<section id="testimonials" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">@L["Testimonials_Title"]</h2>
        <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < 3; i++)
                {
                    var key = $"Testimonial_{i}";
                    <div class="carousel-item @(i == 0 ? "active" : "") text-center px-4">
                        <p class="lh-lg">@L[$"{key}_Text"]</p>
                        <h6 class="mt-3">@L[$"{key}_Author"]</h6>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
</section>
