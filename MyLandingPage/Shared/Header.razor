@namespace MyLandingPage.Shared
@using Microsoft.JSInterop
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Shared.Header> L
@inject IJSRuntime JS
@inject NavigationManager NavigationManager

<!-- Верхняя часть шапки:
     логотип слева, контакты (телефон + e-mail) по центру, кнопка справа -->
<section class="header-top">
    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center py-2">
        <!-- 1) Логотип -->
        <a class="navbar-brand" href="@NavigationManager.BaseUri">
            <img src="images/logo.png" alt="Логотип" class="header-logo" />
        </a>

        <!-- 2) Контакты (телефон + e-mail) -->
        <div class="header-contacts mt-2 mt-md-0">
            <!-- Телефон: иконка + номер, обёрнутый в ссылку tel: -->
            <div class="contact-item">
                <img src="images/icons/phone.svg" alt="Телефон" class="icon-20" />
                <a href="tel:+420774343513" class="contact-link text-nowrap">
                    +420 774 343 513
                </a>
            </div>
            <!-- E-mail: иконка + адрес, обёрнутый в ссылку mailto: -->
            <div class="contact-item">
                <img src="images/icons/mail.svg" alt="E-mail" class="icon-20" />
                <a href="mailto:annushcz@gmail.com" class="contact-link text-nowrap">
                    annushcz@gmail.com
                </a>
            </div>
        </div>

        <!-- 3) Кнопка «Оставить заявку» -->
        <div class="mt-2 mt-md-0">
            <button class="btn btn-primary btn-sm header-apply-btn" @onclick="ScrollToContact">
                @L["Header_ApplyButton"]
            </button>
        </div>
    </div>
</section>

@code {
    private void ScrollToContact()
    {
        // Плавная прокрутка к элементу с id="contact-section"
        JS.InvokeVoidAsync("scrollToSection", "contact-section");
    }
}