@namespace MyLandingPage.Shared
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Shared.ReasonsSection> L

<section id="reasons" class="py-5 bg-light">
    <div class="container">
        <!-- Заголовок -->
        <div class="text-center mb-4">
            <h2 class="fw-bold">@L["Reasons_Title"]</h2>
            <p class="lead text-secondary">@L["Reasons_Subtitle"]</p>
        </div>

        <!-- Причины -->
        <div class="row gy-4">
            <div class="col-12 col-md-6 col-lg-4 text-center">
                <i class="bi bi-journal-text fs-1 mb-3"></i>
                <h5>@L["Reasons_1_Title"]</h5>
                <p class="text-muted">@L["Reasons_1_Text"]</p>
            </div>
            <div class="col-12 col-md-6 col-lg-4 text-center">
                <i class="bi bi-building fs-1 mb-3"></i>
                <h5>@L["Reasons_2_Title"]</h5>
                <p class="text-muted">@L["Reasons_2_Text"]</p>
            </div>
            <div class="col-12 col-md-6 col-lg-4 text-center">
                <i class="bi bi-person-badge fs-1 mb-3"></i>
                <h5>@L["Reasons_3_Title"]</h5>
                <p class="text-muted">@L["Reasons_3_Text"]</p>
            </div>
            <div class="col-12 col-md-6 col-lg-4 text-center">
                <i class="bi bi-calendar4-range fs-1 mb-3"></i>
                <h5>@L["Reasons_4_Title"]</h5>
                <p class="text-muted">@L["Reasons_4_Text"]</p>
            </div>
            <div class="col-12 col-md-6 col-lg-4 text-center">
                <i class="bi bi-people fs-1 mb-3"></i>
                <h5>@L["Reasons_5_Title"]</h5>
                <p class="text-muted">@L["Reasons_5_Text"]</p>
            </div>
            <div class="col-12 col-md-6 col-lg-4 text-center">
                <i class="bi bi-water fs-1 mb-3"></i>
                <h5>@L["Reasons_6_Title"]</h5>
                <p class="text-muted">@L["Reasons_6_Text"]</p>
            </div>
        </div>
    </div>
</section>
